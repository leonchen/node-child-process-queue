{
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": false,
    "strict": true,
    "declaration": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2015"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
